<div class="container">
<div class="row">
  <div class="col s12 m12">
    <div class="card card-fb">
      <div class="card-image">

        <%= image_tag @user.facebook_picture_url %>

      </div>
      <div class="card-content">
        <p>Name : <%= @user.name %></p>
        <p>Address : <%= @user.address %></p>
        <p>Email : <%= @user.email %></p>
      </div>
        <%= link_to "My products", root_path, class: "waves-effect waves-light btn" %>
        <%= link_to "My reservations", root_path, class: "waves-effect waves-light btn" %>

      </div>
    </div>
  </div>

</div>

<%= javascript_tag do %>
  $(document).ready(function() {
    alert('<%= @alert_message %>');
  });
<% end %>
