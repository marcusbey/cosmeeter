<section id="signin"">
  <div class="container">
    <div class="row ">
      <div class="card login-signup ">

        <%= simple_form_for(@product) do |f| %>
        <div class="col s12">
        <h3>New Product:</h3>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :stock %>
        <%= f.input :photo, as: :attachinary %>

        <%= f.button :submit %>
        <% end %>

        <%= link_to 'Back', root_path, class: "pink-text text-16px" %>

      </div>
    </div>
  </div>
</section>
