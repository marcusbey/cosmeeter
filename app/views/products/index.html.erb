<section id="products-index">
    <div class="row filter_bar">
      <div class="col s3">

      </div>
      <div class="col s3">

      </div>
      <div class="col s3">

      </div>
    </div>
    <div class="row ">
      <div class="col s12 m8 l8 products-grid">
        <% @products.each do |product| %>
        <div class=" col s3 ">
          <%= render 'shared/card-product', locals: {:product => product} %>
        </div>
        <% end %>
      </div>
      <div class="col m4 l4 ">
        <div id="map" style="width: 100%; height: 600px;"></div>
      </div>
    </div>

    <div>
      <ul class="pagination">
        <li class="disabled"><a href="#!"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li>
        <li class="active"><a href="#!">1</a></li>
        <li class="waves-effect"><a href="#!">2</a></li>
        <li class="waves-effect"><a href="#!">3</a></li>
        <li class="waves-effect"><a href="#!">4</a></li>
        <li class="waves-effect"><a href="#!">5</a></li>
        <li class="waves-effect"><a href="#!"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
      </ul>
    </div>
</section>

<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var handler = Gmaps.build('Google');
handler.buildMap({ internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>

