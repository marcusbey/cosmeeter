<div class="row">
  <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <% if @product.photo? %>
          <%= cl_image_tag @product.photo.path, width: 450, height: 300, crop: :scale %>
          <% end %>
          <span class="card-title"><%= @product.name %></span>
        </div>
        <div class="card-content">
          <p><%= @product.description %></p>
          <p>Price : <%= @product.price %>$</p>
          <p>Stock : <%= @product.stock %></p>
        </div>
        <div class="card-action">
          <%= link_to "Reserve this product", product_path %>
        </div>
        <div class="card-action">
          <%= link_to "Delete this product", product_path(@product), method: :delete, class: "waves-effect waves-light btn" %>
          <%= link_to "Back", products_path, class: "waves-effect waves-light btn" %>
        </div>
      </div>
  </div>
  <div class="col s12 m6">
    <div id="map" style="width: 100%; height: 600px;"></div>
  </div>
</div>

<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var handler = Gmaps.build('Google');
handler.buildMap({ internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
