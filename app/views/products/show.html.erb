<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-image">
        <% if @product.photo? %>
        <%= cl_image_tag @product.photo.path, width: 450, height: 300, crop: :scale %>
        <% end %>
        <span class="card-title"><%= @product.name %></span>
      </div>
      <div class="card-content">
        <p><%= @product.description %></p>
        <p>Price : <%= @product.price %>$</p>
        <p>Stock : <%= @product.stock %></p>
      </div>
      <div class="card-action">
        <%= link_to "Reserve this product", product_path %>
      </div>
      <div class="card-action">
        <%= link_to "Delete this product", product_path(@product), method: :delete, class: "waves-effect waves-light btn" %>
        <%= link_to "Back", products_path, class: "waves-effect waves-light btn" %>

      </div>
    </div>
  </div>

</div>
